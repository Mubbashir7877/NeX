<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/w_task_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_panel_round"
    android:padding="10dp">
    <!-- Note: removed clickable and focusable from root -->

    <!-- Visual checkbox (unicode, not real CheckBox) -->
    <TextView
        android:id="@+id/w_task_check"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="â˜"
        android:textSize="18sp"
        android:textColor="#121212"
        android:clickable="true"
        android:focusable="true" />
    <!-- Added clickable and focusable here -->

    <!-- Task title -->
    <TextView
        android:id="@+id/w_task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/w_task_check"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:text="Task title"
        android:textColor="#121212"
        android:textSize="16sp"
        android:maxLines="2"
        android:ellipsize="end" />

</RelativeLayout>